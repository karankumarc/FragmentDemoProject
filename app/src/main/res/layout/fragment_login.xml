<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.techpalle.karan.fragmentdemoproject.ui.login.LoginFragment">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        android:hint="Username"
        android:gravity="center"
        android:id="@+id/edit_text_username"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="Password"
        android:gravity="center"
        android:inputType="textPassword"
        android:id="@+id/edit_text_password"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <CheckBox
        android:id="@+id/checkbox_remember_password"
        android:text="Remember password?"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <Button
        android:textColor="@color/white"
        android:background="@color/colorAccent"
        android:layout_marginTop="15dp"
        android:text="Login"
        android:id="@+id/button_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/text_not_registered"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:text="Not registered?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_register"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_toEndOf="@id/text_not_registered"
            android:layout_toRightOf="@id/text_not_registered"
            android:textColor="@color/blue"
            android:textSize="20sp"
            android:text="Register"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
